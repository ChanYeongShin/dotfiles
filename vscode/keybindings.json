// Place your key bindings in this file to override the defaults
[
    // <c-enter> to toggle between terminal and editor focus
    {
        "key": "ctrl+enter",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "inOutput || !editorFocus",
    },
    {
        "key": "ctrl+enter",
        "command": "workbench.action.focusPanel",
        "when": "!focusedView && !panelFocus"
    },


    // <c-m> to multiselect
    {
        "key": "ctrl+m",
        "command": "editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+t",
        "command": "-editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    },


    // <c-[hjkl]> to navigate among panes
    {
        "key": "ctrl+k",
        "command": "workbench.action.focusAboveGroup",
        "when": "!panelFocus && !focusedView"
    },
    {
        "key": "ctrl+k ctrl+up",
        "command": "-workbench.action.focusAboveGroup"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.focusBelowGroup",
        "when": "!focusedView && !panelFocus"
    },
    {
        "key": "ctrl+k ctrl+down",
        "command": "-workbench.action.focusBelowGroup"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusLeftGroup",
        "when": "!focusedView && !panelFocus"
    },
    {
        "key": "ctrl+k ctrl+left",
        "command": "-workbench.action.focusLeftGroup"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.focusRightGroup",
        "when": "!focusedView && !panelFocus"
    },
    {
        "key": "ctrl+k ctrl+right",
        "command": "-workbench.action.focusRightGroup"
    },


    // <c-space>[hjkl] to split panes
    {
        "key": "ctrl+space h",
        "command": "workbench.action.splitEditorLeft"
    },
    {
        "key": "ctrl+k ctrl+oem_5",
        "command": "-workbench.action.splitEditorLeft"
    },
    {
        "key": "ctrl+space k",
        "command": "workbench.action.splitEditorUp"
    },
    {
        "key": "ctrl+k ctrl+oem_5",
        "command": "-workbench.action.splitEditorUp"
    },
    {
        "key": "ctrl+space l",
        "command": "workbench.action.splitEditorRight"
    },
    {
        "key": "ctrl+k ctrl+oem_5",
        "command": "-workbench.action.splitEditorRight"
    },
    {
        "key": "ctrl+space j",
        "command": "workbench.action.splitEditorDown"
    },
    {
        "key": "ctrl+k ctrl+oem_5",
        "command": "-workbench.action.splitEditorDown"
    },


    // <c-space>n to trigger suggestions
    {
        "key": "ctrl+space space",
        "command": "editor.action.triggerParameterHints",
        "when": "editorHasSignatureHelpProvider && editorTextFocus"
    },
    {
        "key": "ctrl+shift+space",
        "command": "-editor.action.triggerParameterHints",
        "when": "editorHasSignatureHelpProvider && editorTextFocus"
    },
    {
        "key": "ctrl+space space",
        "command": "editor.action.triggerSuggest",
        "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible"
    },
    {
        "key": "ctrl+space",
        "command": "-editor.action.triggerSuggest",
        "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible"
    },


    // <c-[pn]> to navigate quick menu
    {
        "key": "ctrl+j",
        "command": "workbench.action.quickOpenNavigateNext",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.quickOpenNavigatePrevious",
        "when": "inQuickOpen"
    },


    // <c-[,.]> to naviagate tabs/terminals instead of <c-pageup/down>
    {
        "key": "ctrl+k",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    {
        "key": "ctrl+pageup",
        "command": "-workbench.action.terminal.focusPrevious",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    {
        "key": "ctrl+pagedown",
        "command": "-workbench.action.terminal.focusNext",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    {
        "key": "ctrl+oem_period",
        "command": "workbench.action.nextEditorInGroup",
        "when": "editorFocus || terminalEditorFocus"
    },
    {
        "key": "ctrl+k ctrl+pagedown",
        "command": "-workbench.action.nextEditorInGroup"
    },
    {
        "key": "ctrl+oem_comma",
        "command": "workbench.action.previousEditorInGroup",
        "when": "editorFocus || terminalEditorFocus"
    },
    {
        "key": "ctrl+k ctrl+pageup",
        "command": "-workbench.action.previousEditorInGroup"
    },
    {
        "key": "ctrl+oem_comma",
        "command": "-workbench.action.openSettings"
    },


    // <c-space>t to open terminal in editor area
    {
        "key": "ctrl+space t",
        "command": "workbench.action.createTerminalEditor"
    },
    {
        "key": "ctrl+d",
        "command": "workbench.action.terminal.killEditor",
        "when": "terminalEditorFocus"
    },
    {
        "key": "ctrl+d",
        "command": "workbench.action.terminal.kill",
        "when": "panelFocus"
    },


    // <c-space><c-space> to zoom in/out
    {
        "key": "ctrl+space ctrl+space",
        "command": "workbench.action.toggleEditorWidths",
        "when": "!panelFocus"
    },
    {
        "key": "ctrl+space ctrl+space",
        "command": "workbench.action.toggleMaximizedPanel",
        "when": "panelFocus"
    },


    // Movement in Panel
    {
        "key": "ctrl+l",
        "command": "workbench.action.nextPanelView",
        "when": "panelFocus"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.previousPanelView",
        "when": "panelFocus"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.quickOpenNavigateNext",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpenNavigatePrevious",
        "when": "inQuickOpen"
    },


    // Disable this shortcut
    {
        "key": "ctrl+shift+w",
        "command": "-workbench.action.closeWindow"
    },


    // Scroll previews
    {
        "key": "h",
        "command": "editor.action.scrollLeftHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "j",
        "command": "editor.action.scrollDownHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "k",
        "command": "editor.action.scrollUpHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "l",
        "command": "editor.action.scrollRightHover",
        "when": "editorHoverFocused"
    },


    // Focus outline
    {
        "key": "ctrl+space o",
        "command": "outline.focus"
    },
]