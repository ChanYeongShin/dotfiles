// Place your key bindings in this file to override the default
[
    // Multiple Cursors Find Next Match
    {
        "key": "ctrl+m",
        "command": "editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    },


    // ctrl+enter to switch focus
    // {
    //     "key": "ctrl+enter",
    //     "command": "workbench.action.focusActiveEditorGroup",
    //     "when": "inOutput || !editorFocus"
    // },
    // {
    //     "key": "ctrl+enter",
    //     "command": "workbench.action.focusPanel",
    //     "when": "!focusedView && !panelFocus"
    // },


    // Navigate Left Down Up Right
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft",
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.navigateDown",
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.navigateUp",
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight",
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.nextSideBarView",
        "when": "sideBarFocus",
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.previousSideBarView",
        "when": "sideBarFocus",
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.nextPanelView",
        "when": "panelFocus"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.previousPanelView",
        "when": "panelFocus"
    },


    // Move among tabs
    {
        "key": "ctrl+oem_period",
        "command": "workbench.action.nextEditorInGroup",
        "when": "!sideBarFocus && !panelFocus",
    },
    {
        "key": "ctrl+oem_comma",
        "command": "workbench.action.previousEditorInGroup",
        "when": "!sideBarFocus && !panelFocus",
    },
    {
        "key": "ctrl+oem_comma",
        "command": "-workbench.action.openSettings"
    },


    // Split Editor
    {
        "key": "ctrl+shift+h",
        "command": "workbench.action.splitEditorLeft"
    },
    {
        "key": "ctrl+shift+k",
        "command": "workbench.action.splitEditorUp"
    },
    {
        "key": "ctrl+shift+l",
        "command": "workbench.action.splitEditorRight"
    },
    {
        "key": "ctrl+shift+j",
        "command": "workbench.action.splitEditorDown"
    },


